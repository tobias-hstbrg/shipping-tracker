{
  "name": "Shipping Tracker Frontend",
  "dockerComposeFile": "docker-compose.yaml",
  "service": "frontend-dev",
  "workspaceFolder": "/workspace",

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "dsznajder.es7-react-js-snippets",
        "steoates.autoimport",
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker",
        "rangav.vscode-thunder-client",
        "bradlc.vscode-tailwindcss"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        }
      }
    }
  },

  "remoteEnv": {
    "SSH_AUTH_SOCK": "/ssh-agent"
  },

  "mounts": [
    "source=${env:HOME}${env:USERPROFILE}/.ssh,target=/home/node/.ssh,readonly,type=bind"
  ],

  "forwardPorts": [5173, 8080],
  "postCreateCommand": "cd frontend && sudo chown -R node:node node_modules && npm install",
  "remoteUser": "node"
}
